<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>



		<record id="o2clinic_patient_form" model="ir.ui.view">
			<field name="name">patient form</field>
			<field name="model">o2clinic.patients</field> 
			<field name="arch" type="xml">
				<form string="patient form">
					<header>
                       
					</header>
					<sheet>
						
						<field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;}"/>
                      
							<group string="Basic Data">
								<field name="name"/>
								<field name="en_name"/>
								<field name="gender" widget="radio"/>
								<field name="birth_date"/>


								<field name="nationality_id" />

								<field name="Social_status" widget="radio" />
								<field name="passport_No" />
								<field name="blood_type" />
								<field name="ID_Number" />
								<field name="Religion" />

								<field name="Date_of_Birth" />
								<field name="telephone_number" />
								<field name="address" />
								<field name="patient_job" />
								<field name="sponsor_name" />
								<field name="sponsor_mobile_No" />
							</group>


					</sheet>

				</form>
			</field>
		</record>



      


 		<record id="o2clinic_emr_patients_action" model="ir.actions.act_window">
			<field name="name">patients</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">o2clinic.patients</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree,kanban</field>
		</record> 
		

	




	</data>
</odoo>